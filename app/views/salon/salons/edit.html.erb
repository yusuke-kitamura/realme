<h2>オンラインサロン情報</h2>

<%= form_with model: @salon, url: {controller: 'salon/salons', action: 'update' }, local: true do |f| %>

	<div class = "field">
		<%= f.attachment_field :image %> 
	</div>
	
	<div class="field">
        <%= f.label :salon_name, "オンラインサロン名" %><br />
        <%= f.text_field :salon_name %>
    </div>

    <div class="field">
        <%= f.label :person_name, "代表者名" %><br />
        <%= f.text_field :person_name %>
    </div>

    <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
        <%= f.label :number, "会員数" %><br />
        <%= f.text_field :number %>
    </div>

    <div class="field">
        <%= f.label :price, "月極価格" %><br />
        <%= f.text_field :price %>
    </div>

    <div class="field">
        <%= f.label :purpose, "目的" %><br />
        <%= f.text_area :purpose %>
    </div>

    <div class="action">
        <%= f.submit "変更する" %>
    </div>
<% end %>