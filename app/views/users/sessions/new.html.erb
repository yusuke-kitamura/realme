<div class="row">
  <h2 class= "offset-lg-4">ログイン</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <%= f.label :email, "Eメール", class: "col-lg-8 offset-lg-4" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-4 offset-lg-4" %>
  </div>

  <div class="row">
    <%= f.label :password, "パスワード", class: "col-lg-8 offset-lg-4" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-4 offset-lg-4" %>
  </div><br>

  <div class="row-actions">
    <%= f.submit "ログイン", class: "col-lg-2 offset-lg-5" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
