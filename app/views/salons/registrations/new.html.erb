<div class="row">
    <h2 class="offset-lg-4">オンラインサロン登録</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "salons/shared/error_messages", resource: resource %>

    <div class="row">
        <%= f.label :salon_name, "オンラインサロン名", class: "col-lg-8 offset-lg-4" %><br />
        <%= f.text_field :salon_name, class: "col-lg-4 offset-lg-4" %>
    </div>

    <div class="row">
        <%= f.label :person_name, "代表者名", class: "col-lg-8 offset-lg-4" %><br />
        <%= f.text_field :person_name, class: "col-lg-4 offset-lg-4" %>
    </div>

    <div class="row">
        <%= f.label :email, "Eメール", class: "col-lg-8 offset-lg-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-4 offset-lg-4" %>
    </div>

    <div class="row">
        <%= f.label :password, "パスワード(6字以上)", class: "col-lg-8 offset-lg-4" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-4 offset-lg-4" %>
    </div>

    <div class="row">
        <%= f.label :password_confirmation, "確認用パスワード", class: "col-lg-8 offset-lg-4" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-4 offset-lg-4" %>
    </div><br>

    <div class="row-actions">
        <%= f.submit "登録する", class: "col-lg-2 offset-lg-5" %>
    </div>
<% end %>

<%= render "salons/shared/links" %>
